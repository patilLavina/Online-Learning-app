<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CertificateActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:src="@drawable/certificate">
    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="230dp"
        android:background="@drawable/certificate_bottom_background"
        android:elevation="10dp">

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="5dp"
            android:background="#1F2244"
            android:layout_gravity="center"
            android:layout_marginTop="5dp">
        </LinearLayout>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@drawable/cap">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/aclonica"
            android:text="Congratulations"
            android:textSize="30dp"
            android:textColor="#1F2244"
            android:textStyle="bold">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Certificate Recipient:"
            android:layout_marginLeft="50dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="10dp">
        </TextView>

        <EditText
            android:id="@+id/certificate_name"
            android:layout_width="320dp"
            android:layout_height="30dp"
            android:hint="Enter name"
            android:layout_gravity="center"
            android:background="@drawable/white_rectangle_background"
            android:textSize="18sp"
            android:paddingLeft="10dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black">
        </EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Download Your Certificate"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="15dp">
        </TextView>

        <Button
            android:id="@+id/download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Download"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:backgroundTint="#1F2244"
            android:layout_marginTop="4dp">
        </Button>

    </LinearLayout>

</RelativeLayout>