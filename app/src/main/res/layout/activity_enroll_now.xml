<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AFC5EF"
    tools:context=".EnrollNowActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@drawable/online_education">
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/course_page_bottom"
        android:orientation="vertical"
        android:layout_marginTop="240dp">

        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="5dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="#1560B5">

        </RelativeLayout>

        <TextView
            android:id="@+id/course_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-black"
            android:text="Course Name"
            android:textColor="#1560B5"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/course_description"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif"
            android:text=" This is new course This is new course This is new course"
            android:textColor="#1560B5"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="25sp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/enroll_now_btn"
                android:layout_width="110dp"
                android:layout_height="70dp"
                android:layout_alignParentEnd="true"
                android:layout_margin="5dp"
                android:backgroundTint="#1560b5"
                android:fontFamily="sans-serif"
                android:text="Enroll Now"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/share_course"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_toRightOf="@+id/like_course"
                android:src="@drawable/ic_share" />


            <ImageView
                android:id="@+id/course_rating_star"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@+id/like_course"
                android:layout_marginStart="15dp"
                android:src="@drawable/ic_star_rate"
                app:tint="#FFC107" />

            <ImageView
                android:id="@+id/like_course"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:src="@drawable/ic_favourite_outline" />

            <TextView
                android:id="@+id/total_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/share_course"
                android:layout_marginStart="5dp"
                android:layout_toRightOf="@id/course_rating_star"
                android:text="4.5"
                android:textColor="@color/black"
                android:textSize="18sp">

            </TextView>

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:backgroundTint="#AFC5EF"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="This course includes:"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:drawablePadding="15dp"
                    android:drawableStart="@drawable/ic_tv"
                    android:drawableTint="@color/white"
                    android:fontFamily="sans-serif"
                    android:text="on-demand videos"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:drawablePadding="15dp"
                    android:drawableStart="@drawable/ic_infinity"
                    android:drawableTint="@color/white"
                    android:fontFamily="sans-serif"
                    android:text="Full lifetime access"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:drawablePadding="15dp"
                    android:drawableStart="@drawable/ic_certificate"
                    android:drawableTint="@color/white"
                    android:fontFamily="sans-serif"
                    android:text="Certificate of completion"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>